def check_results_3point (testobj, numgrad):
    testobj.assertAlmostEqual(numgrad[0][0], -8.691433e-01, 2)
    testobj.assertAlmostEqual(numgrad[0][1],  1.222361e-01, 2)
    testobj.assertAlmostEqual(numgrad[0][2], -5.095738e-03, 2)
    testobj.assertAlmostEqual(numgrad[1][0],  9.031754e-01, 2)
    testobj.assertAlmostEqual(numgrad[1][1], -1.831273e-01, 2)
    testobj.assertAlmostEqual(numgrad[1][2],  4.135070e-03, 2)
    testobj.assertAlmostEqual(numgrad[2][0], -3.557280e-02, 2)
    testobj.assertAlmostEqual(numgrad[2][1],  6.107186e-02, 2)
    testobj.assertAlmostEqual(numgrad[2][2],  8.776214e-04, 2)

def check_results_3point_kin (testobj, numgrad):
    testobj.assertAlmostEqual(numgrad[0][0], -7.832653e-01, 2)
    testobj.assertAlmostEqual(numgrad[0][1],  1.320973e-01, 2)
    testobj.assertAlmostEqual(numgrad[0][2], -4.104603e-03, 2)
    testobj.assertAlmostEqual(numgrad[1][0],  1.295881e+00, 2)
    testobj.assertAlmostEqual(numgrad[1][1], -4.377244e-01, 2)
    testobj.assertAlmostEqual(numgrad[1][2],  2.486967e-03, 2)
    testobj.assertAlmostEqual(numgrad[2][0], -5.142710e-01, 2)
    testobj.assertAlmostEqual(numgrad[2][1],  3.066467e-01, 2)
    testobj.assertAlmostEqual(numgrad[2][2],  1.608193e-03, 2)

def check_results_5point (testobj, numgrad):
    testobj.assertAlmostEqual(numgrad[0][0], -8.691433e-01, 2)
    testobj.assertAlmostEqual(numgrad[0][1],  1.222361e-01, 2)
    testobj.assertAlmostEqual(numgrad[0][2], -5.095738e-03, 2)

# molecules
f_h2o = os.path.join (pyadfenv.startdir, 'h2o.xyz')

m_h2o = molecule(f_h2o)
m_h2o.set_symmetry('NOSYM')
m_h2o.set_charge(0)
m_h2o.set_spin(0)

# ADF settings
s_adf = adfsettings()
s_adf.set_functional('LDA')
s_adf.set_integration(4.0)
s_adf.set_save_tapes([21])
s_adf.set_exactdensity(True)
basis = 'SZ'
core = None
o_scf = []

s_scf = adfscfsettings(basis=basis, core=core, settings=s_adf, options=o_scf)
s_scf.options = ['TOTALENERGY']

job = adfnumgradsjob(mol=m_h2o, settings=None, scfsettings=s_scf)
results = job.run()
numgrad = results.get_gradients()

for i in range(3):
    for j in range(3):
        print "%13.6e" % numgrad[i][j]

if 'unittesting' in pyadfenv.options:
    check_results_3point(testobj, numgrad)

# energyterm: Kinetic energy

s_numdiff = numgradsettings(energyterm='Total Kinetic energy')

job = adfnumgradsjob(mol=m_h2o, settings=s_numdiff, scfsettings=s_scf)
results = job.run()
numgrad = results.get_gradients()

for i in range(3):
    for j in range(3):
        print "%13.6e" % numgrad[i][j]

if 'unittesting' in pyadfenv.options:
    check_results_3point_kin(testobj, numgrad)

# 5-point formula

s_numdiff = numgradsettings(method='5point')

job = adfnumgradsjob(mol=m_h2o, settings=s_numdiff, scfsettings=s_scf, atoms=[1])
results = job.run()
numgrad = results.get_gradients()

for i in range(1):
    for j in range(3):
        print "%13.6e" % numgrad[i][j]

if 'unittesting' in pyadfenv.options:
    check_results_5point(testobj, numgrad)
